{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "name": "Property"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "propertyType": {
      "type": "enumeration",
      "enum": [
        "CASA",
        "DEPARTAMENTO",
        "LOCAL_COMERCIAL",
        "OFICINA",
        "ESTACIONAMIENTO",
        "TERRENO"
      ],
      "required": true
    },
    "numberOfRooms": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "numberOfBathrooms": {
      "type": "integer",
      "required": true
    },
    "numberOfParkingLots": {
      "type": "integer"
    },
    "numberOfFloors": {
      "type": "integer",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "ALQUILER",
        "VENTA"
      ],
      "required": true
    },
    "price": {
      "type": "float",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "USD",
        "PEN"
      ],
      "required": true
    },
    "floorNumber": {
      "type": "integer"
    },
    "location": {
      "model": "location",
      "via": "property"
    },
    "landArea": {
      "type": "decimal",
      "required": true
    },
    "houseArea": {
      "type": "decimal",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "properties"
    },
    "imageURL": {
      "type": "string",
      "required": true
    },
    "antiquity": {
      "type": "string",
      "regex": "^[0-9]+$",
      "default": "0",
      "required": true
    }
  }
}
